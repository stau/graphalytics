<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>graphalytics-${version}</baseDirectory>

	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>nl.tudelft.graphalytics:graphalytics-platforms-giraph</include>
				<include>nl.tudelft.graphalytics:graphalytics-platforms-graphlab</include>
				<include>nl.tudelft.graphalytics:graphalytics-platforms-graphx</include>
				<include>nl.tudelft.graphalytics:graphalytics-platforms-mapreducev2</include>
				<include>nl.tudelft.graphalytics:graphalytics-platforms-neo4j</include>
				<include>nl.tudelft.graphalytics:graphalytics-platforms-ludograph</include>
			</includes>
			<binaries>
				<outputDirectory>platforms/${module.basedir.name}/target/</outputDirectory>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
			</binaries>
			<sources>
				<outputDirectoryMapping>platforms/${module.basedir.name}/</outputDirectoryMapping>
				<fileSets>
					<fileSet>
						<directory>.</directory>
						<includes>
							<include>*.sh</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>

	<fileSets>
		<fileSet>
			<directory>${top.dir}</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>config/**</include>
				<include>report-template/**</include>
				<include>run-benchmark.sh</include>
				<include>README.md</include>
				<include>CHANGELOG.md</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
